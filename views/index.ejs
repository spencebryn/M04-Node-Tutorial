<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

    <div class="blogs" class="content">
        <h2>All Blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a href="/blogs/<%= blog._id %>" class="single" class="blogs">
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
                </a>
            <% }) %>
        <% }  else { %>
            <p>There are no blogs to display.</p>
        <% } %>
    </div>
    <%- include('./partials/foot.ejs') %>
  </body>
  </html>